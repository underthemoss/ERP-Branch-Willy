generator client {
  provider = "prisma-client-js"
  output   = "./generated/mongo/"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Entity {
  id              String           @id @map("_id")
  name            String
  entityTypeId    String
  tenantId        String
  entityType      EntityType       @relation(fields: [entityTypeId], references: [id])
  attributeValues AttributeValue[]

  // Hierarchical relationships
  parentId String? // Reference to the parent entity
  parent   Entity?  @relation("EntityHierarchy", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children Entity[] @relation("EntityHierarchy")
}

model EntityType {
  id         String            @id @map("_id")
  name       String            @unique
  tenantId   String
  attributes EntityAttribute[]
  Entity     Entity[]
}

enum EntityAttributeValueType {
  string
  number
  date
  boolean
}

model EntityAttribute {
  id             String                   @id @map("_id")
  name           String
  tenantId       String
  type           EntityAttributeValueType
  entityTypeId   String
  entityType     EntityType               @relation(fields: [entityTypeId], references: [id])
  AttributeValue AttributeValue[]
}

model AttributeValue {
  id              String          @id @default(uuid()) @map("_id")
  entityId        String
  attributeId     String
  tenantId        String
  stringValue     String?
  numberValue     Float?
  booleanValue    Boolean?
  dateValue       DateTime?
  entity          Entity          @relation(fields: [entityId], references: [id])
  entityAttribute EntityAttribute @relation(fields: [attributeId], references: [id])
}
