    "@mui/icons-material": "^6.3.1",
    "@mui/joy": "^5.0.0-beta.51",
    "@mui/material": "^6.4.11",
    "@mui/x-data-grid": "^7.24.1",
    "@mui/x-data-grid-pro": "^8.0.0",
    "@mui/x-date-pickers": "^8.0.0-beta.3",
    "@mui/x-date-pickers-pro": "^8.0.0-beta.3",
    "@mui/x-license": "^8.0.0",
