{
  "name": "es-erp",
  "version": "0.1.0",
  "private": true,
  "graphql": {
    "schema": "./schema.graphql",
    "documents": "./src/**/*.{graphql,js,ts,jsx,tsx}"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:local-gql": "NEXT_PUBLIC_GQL_URL=http://localhost:5000/graphql next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "codegen": "graphql-codegen",
    "codegen:watch": "graphql-codegen --watch",
    "codegen:update-schema": "graphql-codegen --config codegen.update-schema.ts",
    "codegen:update-schema-local": "NEXT_PUBLIC_GQL_URL=http://localhost:5000/graphql graphql-codegen --config codegen.update-schema.ts",
    "depcheck": "npx depcheck",
    "test:depcheck": "depcheck | tee /dev/tty | grep -q 'No depcheck issue' || (echo 'Unused dependencies found' && exit 1)",
    "test:playwright": "npx playwright test",
    "prettier:check": "npx prettier . --check",
    "prettier:fix": "npx prettier . -w",
    "codex": "codex --full-auto -m o3",
    "codex:codereview": "git fetch origin main && git diff $(git merge-base origin/main HEAD)...HEAD > diff.patch && npx ts-node-dev ./scripts/code-review-retry.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@apollo/client": "^3.13.8",
    "@auth0/auth0-react": "^2.3.0",
    "@datadog/browser-rum": "^6.18.0",
    "@datadog/browser-rum-react": "^6.18.0",
    "@emotion/cache": "^11.14.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/roboto": "^5.1.1",
    "@hello-pangea/dnd": "^18.0.1",
    "@mui/icons-material": "^7.1.0",
    "@mui/joy": "^5.0.0-beta.52",
    "@mui/material": "^7.3.1",
    "@mui/material-nextjs": "^7.0.2",
    "@mui/x-charts": "^8.5.2",
    "@mui/x-data-grid-premium": "^8.5.0",
    "@mui/x-date-pickers": "^8.0.0-beta.3",
    "@mui/x-date-pickers-pro": "^8.0.0-beta.3",
    "@mui/x-license": "^8.0.0",
    "@mui/x-tree-view": "^8.3.1",
    "@mui/x-tree-view-pro": "^8.6.0",
    "@toolpad/core": "^0.15.0",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "emoji-picker-react": "^4.13.2",
    "graphql": "^16.10.0",
    "jdenticon": "^3.3.0",
    "jose": "^5.9.6",
    "next": "^15.3.1",
    "pg": "^8.13.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.56.3",
    "react-virtualized-auto-sizer": "^1.0.26",
    "sqids": "^0.3.0"
  },
  "devDependencies": {
    "@0no-co/graphqlsp": "^1.12.16",
    "@faker-js/faker": "^9.8.0",
    "@gitbeaker/rest": "^42.5.0",
    "@graphql-codegen/cli": "^5.0.5",
    "@graphql-codegen/fragment-matcher": "^5.1.0",
    "@graphql-codegen/near-operation-file-preset": "^3.0.0",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@graphql-codegen/typescript-operations": "^4.6.0",
    "@graphql-codegen/typescript-react-apollo": "^4.3.2",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@parcel/watcher": "^2.5.1",
    "@playwright/test": "^1.52.0",
    "@storybook/addon-onboarding": "^9.0.5",
    "@storybook/nextjs": "^9.0.5",
    "@types/lodash": "^4.17.17",
    "@types/pg": "^8.11.11",
    "@types/react": "^19",
    "eslint": "^8.57.1",
    "eslint-config-next": "15.1.4",
    "eslint-plugin-storybook": "^9.0.5",
    "npm": "^11.0.0",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "prettier-plugin-packagejson": "^2.5.10",
    "rxjs": "^7.8.1",
    "storybook": "^9.0.5",
    "typescript": "^5.7.3"
  }
}
